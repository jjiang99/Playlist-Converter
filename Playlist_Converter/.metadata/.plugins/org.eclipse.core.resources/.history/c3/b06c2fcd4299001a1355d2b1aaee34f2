	public static void getAllSongs(URL url) throws IOException {
		switch (sourceService) {
		case SPOTIFY:
			getSongsSpotify(url);
		case GOOGLE:
			getSongsGoogle(url);
		case APPLE:
			getSongsApple(url);
		}	
	}
	


